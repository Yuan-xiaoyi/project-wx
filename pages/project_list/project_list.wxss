/* pages/project_list/project_list.wxss */
.hotService{
  width: 100%;
  height: 100rpx;
  margin-top: 16rpx;
  background-color: #fff;
  padding: 0 26rpx;
  box-sizing: border-box;
}
.hotServiceList_box {
  position: relative;
  overflow: hidden;
  white-space: nowrap;
  width: 100%;
}
 
.block {
  width: 200rpx;
  height: 80rpx;
  padding: 0 10rpx;
  display: inline-block;
  
}
.blockContent{
  width: 100%;
  height: 100%;
  background-color: white;
  border: 1px solid rgb(101, 203, 243);
  color: rgb(101, 203, 243);
  display: flex;
  justify-content: center;
  align-items: center;
}
.active_block{
  background-color: rgb(101, 203, 243);
  color:#fff;
  font-weight: 600;
}
 
.block:first-child {
  padding: 0 15rpx 0 0;
}
.slide{
  height: 20rpx;
  background:#fff;
  width:100%;
  padding:14rpx 0 5rpx 0
 }
 .slide .slide-bar{
  width: 80rpx;
  margin:0 auto;
  height: 10rpx;
  background:#eee;
  border-radius: 8rpx;
 }
 .slide .slide-bar .slide-show{
  height:100%;
  border-radius: 8rpx;
  background-color: #00aeff;
 }

.type_row{
  display: flex;  
  flex-direction: row;
  justify-content: center;
  height: 80rpx;  
  overflow-x: auto;
}
.type_row button{
  width: 100px;
}
.type_item{ 
  margin: 0 10rpx;
  margin-top: 10rpx;
  /* flex: 1; */
  /* display: flex;
  justify-content: center;
  align-items: center; */
}


.project_row{
  position: relative;
  display: flex;  
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  table-layout: fixed;
  top: 0;
  left: 0;
  z-index: 999;/*这个设置在原生组件中用于置顶导航条*/
}
.project_row-position{
  position: fixed !important;
  background-color: white;
}

.title_item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.active{
  color:var(--themeColor);
  border-bottom: 4rpx solid currentColor;
  font-weight: 600;
}

.project_item{
  width: 96%;
  margin: 0rpx 2%;
  padding: 12rpx 20rpx;
  height: 120rpx;
  border-radius: 4px;
  border-top: 1rpx solid #dfdedd;
}
.project_item:last-child{
  border-bottom: 1rpx solid #dfdedd;
}
.project_item_hover{
  background-color: var(--textBgColor);
}
.project_title{
  font-size: medium;
  font-weight: 400;
  padding-bottom: 8rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.project_detail{
  font-size: small;
  color: gray;
  width: 100%;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}