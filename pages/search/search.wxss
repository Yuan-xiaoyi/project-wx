/* pages/search/search.wxss */

.search_input{
  position: fixed;
  width: 100%;
  height: 90rpx;
  padding: 10rpx;
  background-color: var(--themeColor);
  display: inline-flex;
  table-layout: fixed;
  position: relative;
  top: 0;
  left: 0;
  z-index: 999;/*这个设置在原生组件中用于置顶导航条*/
}
.inputBorder{
  width: 79%;
  margin-right: 1%;
  height: 100%;
  display: flex;
  padding-left: 20rpx;
  align-items:center;
  background-color:#fff;
  border-radius: 15rpx;
  color: #666;
}
.inputBtn {
  display: block;
  width: 20%;
  color: #666666;
}

.project_item{
  width: 96%;
  margin: 0rpx 2%;
  padding: 12rpx 20rpx;
  height: 120rpx;
  border-radius: 4px;
  border-top: 1rpx solid #dfdedd;
}
.project_item:last-child{
  border-bottom: 1rpx solid #dfdedd;
}
.project_item_hover{
  background-color: var(--textBgColor);
}
.project_title{
  font-size: medium;
  font-weight: 400;
  padding-bottom: 8rpx;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.project_detail{
  font-size: small;
  color: gray;
  width: 100%;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}