/* pages/project_detail/project_detail.wxss */
.containter{
  display: block;
  padding: 30rpx;
}
.details{
  font-size: 30rpx;
  width: 100%;
  height: 60rpx;
}
.detail_label{
  float: left;
  width: 180rpx;
  height: 100%;
  color: gray;
}
.detail_value{
  float: right;
  /* height: 100%; */
  width: calc(100% - 200rpx);
  color: black;
  display:-webkit-box;
  -webkit-line-clamp:1;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
}
.detail_member{
  margin-right: 25rpx;
}
.detail_btn{
  float: left;
  width: 25%;
  height: 100%;
  margin-top: 32rpx;
}

.taskDetail{
  display: flex;
  padding: 10rpx;
}
.collect_icon{
  padding: 0 10rpx;
}
.header{
  width: 15rpx;
  height: 15rpx;
  border: 1px solid #E4E7ED;
  background-color: #E4E7ED;
  border-radius: 50%;
  margin-top: 10rpx;
}
.line{
  width: 15rpx;
  height: 100%;
  border-left: 1px solid #E4E7ED;
  margin-left: 6rpx;
  margin-bottom: -10rpx;
  opacity: 1;
}
.taskDetail:last-child .line{
  opacity: 0;
}
.detail_date{
  width: 160rpx;
  color: var(--themeColor);
  font-size: small;
  display: inline;
}
.blockContent_hover{
  background-color: var(--textBgColor);
}
.hasend{
  padding: 3rpx 6rpx;
  border-radius: 10rpx;
  border: 1rpx solid #67C23A;
  color: #67C23A;
  background-color: #F0F9EB;
}
.noend{
  padding: 3rpx 6rpx;
  border-radius: 10rpx;
  border: 1rpx solid #409EFF;
  color: #409EFF;
  background-color: #ECF5FF;
}
.detail_total{
  display: inline-flex;
  width: 100%;
}
.detail_name{
  font-size: small;
  color: gray;
  margin-right: 20rpx;
}
.detail_text{
  width: calc(100% - 150rpx);
  font-size: small;
  overflow:hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  white-space: nowrap;
}


/*数量加减*/
.carts-num {
  position: fixed;
  right: 60rpx;
  bottom: 100rpx;
  display: flex;
  align-items: center;
  text-align: center;
  height: 50rpx;
}
.carts-hover{
  opacity: 0.8;
  background: var(--textBgColor);
}
.plus {
  background-color: var(--themeColor) !important;
  margin-right: 20rpx;
}
.carts-num .plus {
  margin: 10rpx;
  border: 1rpx solid #ebebeb;
  border-radius: 50%;
  color: white;
  background-color: var(--themeColor);
  text-align: center;
  height: 100rpx;
  width: 100rpx;
  font-size: 70rpx;
  line-height: 85rpx;
}

.sendbtn{
  display: inline-flex;
  width: 100%;
  margin-top: 40rpx;
}
.sendbtn button{
  margin: 0;
  width: 50%;
  border-radius: 0;
}

.taskinput{
  width: calc(100% - 22rpx);
  border: 1rpx lightgray solid;
  background-color: #F8F8F8;
  margin-bottom: 20rpx;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
}
.dateInput{
  width: calc(100% - 22rpx);
}